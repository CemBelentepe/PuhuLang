{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++ build optimized",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-O3",
                "${workspaceFolder}/src/*cpp",
                "-o",
                "${workspaceFolder}/bin/puhuc.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build debug",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++17",
                "${workspaceFolder}/src/*cpp",
                "-o",
                "${workspaceFolder}/bin/puhuc_debug.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}